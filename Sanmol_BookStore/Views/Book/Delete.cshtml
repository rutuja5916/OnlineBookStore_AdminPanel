@using System.Globalization
@model Sanmol_BookStore_Models.Book

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var indianCulture = new CultureInfo("en-IN");
}

<h2>Delete Book</h2>

<h4>Are you sure you want to delete this book?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C",indianCulture)</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        @if (!string.IsNullOrEmpty(Model.CoverImagePath))
        {
            <dt class="col-sm-2">Cover Image</dt>
            <dd class="col-sm-10">
                <img src="@Url.Content(Model.CoverImagePath)" alt="Cover Image" style="max-width: 200px; height: auto;" />
            </dd>
        }
    </dl>

    <!-- Delete Confirmation Form -->
    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

